{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Gestión de Bases de Datos",  
        "version": "1.0.0",
        "description": "API para gestionar operaciones de bases de datos como la obtención de tablas y columnas y la ejecución de consultas." 
    },
    "paths": {
        "/tables": {
            "get": {
                "summary": "Obtener lista de todas las tablas", 
                "description": "Devuelve una lista de todas las tablas en la base de datos. La base de datos contiene datos para usuarios y transacciones de cada usuario.", 
                "operationId": "getTables",
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "Table": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/table/{tableName}/columns": {
            "get": {
                "summary": "Obtener nombres de columna de una tabla específica", 
                "description": "Devuelve una lista de nombres de columna para la tabla especificada.",  
                "operationId": "getColumnNames",
                "parameters": [
                    {
                        "name": "tableName",
                        "in": "path",
                        "description": "Nombre de la tabla para obtener los nombres de columna", 
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa", 
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "Field": {
                                                "type": "string"
                                            },
                                            "Type": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/execute-query": {
            "post": {
                "summary": "Ejecutar una consulta SQL", 
                "description": "Ejecuta la consulta SQL proporcionada y devuelve los resultados.", 
                "operationId": "executeQuery",
                "requestBody": {
                    "description": "Cuerpo de la solicitud con la consulta SQL a ejecutar", 
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "query": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta exitosa", 
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}